{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },

  "include": ["src/**/*.ts"]
}
