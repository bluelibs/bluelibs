{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
